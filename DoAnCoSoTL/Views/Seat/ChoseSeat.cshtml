@model List<DoAnCoSoTL.Models.Seat>

<h2>Choose Your Seat</h2>
<p>Cinema: @ViewData["CinemaName"]</p>
<form asp-action="ChooseSeat" method="post">
    @foreach (var seat in Model)
    {
        <label>
            <input type="checkbox" name="selectedSeats" value="@seat.Id" @(!seat.IsAvailable ? "disabled" : "") />
            @seat.Row - @seat.Number
        </label>
        <br />
    }
    <button type="submit">Confirm Seats</button>
</form>
