@model DoAnCoSoTL.Models.Movie

@{
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-start">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Model.Name</h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <!-- Sử dụng align-items-center để căn chữ theo chiều dọc -->
                        <div class="col-md-8">
                            <!-- Sử dụng col-md-8 cho hình ảnh -->
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="@Model.Image" alt="Cinema Image" class="img-fluid" style="max-width: 300px; height: auto;" />
                            }
                            else
                            {
                                <img src="placeholder.jpg" alt="Placeholder Image" class="img-fluid" style="max-width: 300px; height: auto;" />
                            }
                        </div>
                        <div class="col-md-4 text-left">
                            <!-- Sử dụng col-md-4 cho chữ và text-left để căn trái -->
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-action="Index" class="btn btn-primary mt-3 ml-3">Back to List</a>
        </div>
    </div>
</div>
